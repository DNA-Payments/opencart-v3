{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-dna_payments" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
      <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-dna_payments" class="form-horizontal">

          <!-- Client ID -->
          <div class="form-group{{ payment_dna_payments_test_mode != 1 ? ' required' : '' }}">
            <label class="col-sm-2 control-label" for="payment_dna_payments_client_id">
              {{ entry_client_id }}
              <span data-toggle="tooltip" title="{{ help_client_id }}"></span>
            </label>
            <div class="col-sm-10">
              <input type="text" name="payment_dna_payments_client_id"
                     value="{{ payment_dna_payments_client_id }}"
                     placeholder="{{ entry_client_id }}"
                     id="payment_dna_payments_client_id"
                     class="form-control"/>
              {% if error_client_id %}
                <div class="text-danger">{{ error_client_id }}</div>
              {% endif %}
            </div>
          </div>

          <!-- Client secret -->
          <div class="form-group{{ payment_dna_payments_test_mode != 1 ? ' required' : '' }}">
            <label class="col-sm-2 control-label" for="payment_dna_payments_client_secret">
              {{ entry_client_secret }}
              <span data-toggle="tooltip" title="{{ help_client_secret }}"></span>
            </label>
            <div class="col-sm-10">
              <textarea name="payment_dna_payments_client_secret"
                        id="payment_dna_payments_client_secret"
                        rows="5"
                        class="form-control">{{ payment_dna_payments_client_secret }}</textarea>
              {% if error_client_secret %}
                <div class="text-danger">{{ error_client_secret }}</div>
              {% endif %}
            </div>
          </div>

          <!-- Terminal -->
          <div class="form-group{{ payment_dna_payments_test_mode != 1 ? ' required' : '' }}">
            <label class="col-sm-2 control-label" for="payment_dna_payments_terminal">
              {{ entry_terminal }}
              <span data-toggle="tooltip" title="{{ help_terminal }}"></span>
            </label>
            <div class="col-sm-10">
              <input type="text" name="payment_dna_payments_terminal"
                     value="{{ payment_dna_payments_terminal }}"
                     placeholder="{{ entry_terminal }}"
                     id="payment_dna_payments_terminal"
                     class="form-control"/>
              {% if error_terminal %}
                <div class="text-danger">{{ error_terminal }}</div>
              {% endif %}
            </div>
          </div>

          <!-- Test mode -->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="payment_dna_payments_test_mode">{{ entry_test_mode }}</label>
            <div class="col-sm-10">
              <select name="payment_dna_payments_test_mode" id="payment_dna_payments_test_mode" class="form-control">
                {% if payment_dna_payments_test_mode %}
                  <option value="1" selected="selected">{{ text_yes }}</option>
                  <option value="0">{{ text_no }}</option>
                {% else %}
                  <option value="1">{{ text_yes }}</option>
                  <option value="0" selected="selected">{{ text_no }}</option>
                {% endif %}
              </select>
            </div>
          </div>

          <!-- Test client ID -->
          <div class="form-group{{ payment_dna_payments_test_mode ? ' required' : '' }}">
            <label class="col-sm-2 control-label" for="payment_dna_payments_test_client_id">
              {{ entry_test_client_id }}
              {% if help_test_client_id %}
                <span data-toggle="tooltip" title="{{ help_test_client_id }}"></span>
              {% endif %}
            </label>
            <div class="col-sm-10">
              <input type="text" name="payment_dna_payments_test_client_id"
                     value="{{ payment_dna_payments_test_client_id }}"
                     placeholder="{{ entry_test_client_id }}"
                     id="payment_dna_payments_test_client_id"
                     class="form-control"
              />
              {% if error_test_client_id %}
                <div class="text-danger">{{ error_test_client_id }}</div>
              {% endif %}
            </div>
          </div>

          <!-- Tets client secret -->
          <div class="form-group{{ payment_dna_payments_test_mode ? ' required' : '' }}">
            <label class="col-sm-2 control-label" for="payment_dna_payments_test_client_secret">
              {{ entry_test_client_secret }}
              {% if help_test_client_secret %}
                <span data-toggle="tooltip" title="{{ help_test_client_secret }}"></span>
              {% endif %}
            </label>
            <div class="col-sm-10">
              <textarea name="payment_dna_payments_test_client_secret"
                        id="payment_dna_payments_test_client_secret"
                        rows="5"
                        class="form-control">{{ payment_dna_payments_test_client_secret }}</textarea>
              {% if error_test_client_secret %}
                <div class="text-danger">{{ error_test_client_secret }}</div>
              {% endif %}
            </div>
          </div>

          <!-- Test terrminal -->
          <div class="form-group{{ payment_dna_payments_test_mode ? ' required' : '' }}">
            <label class="col-sm-2 control-label" for="payment_dna_payments_test_terminal">
              {{ entry_test_terminal }}
              {% if help_test_terminal %}
                <span data-toggle="tooltip" title="{{ help_test_terminal }}"></span>
              {% endif %}
            </label>
            <div class="col-sm-10">
              <input type="text" name="payment_dna_payments_test_terminal"
                     value="{{ payment_dna_payments_test_terminal }}"
                     placeholder="{{ entry_test_terminal }}"
                     id="payment_dna_payments_test_terminal"
                     class="form-control"/>
              {% if error_test_terminal %}
                <div class="text-danger">{{ error_test_terminal }}</div>
              {% endif %}
            </div>
          </div>

          <!-- Description -->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="payment_dna_payments_description">
              {{ entry_description }}
              {% if help_description %}
                <span data-toggle="tooltip" title="{{ help_description }}"></span>
              {% endif %}
            </label>
            <div class="col-sm-10">
              <textarea name="payment_dna_payments_description"
                        id="payment_dna_payments_description"
                        rows="5"
                        class="form-control">{{ payment_dna_payments_description }}</textarea>
            </div>
          </div>

          <!-- Payment sort order -->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="payment_dna_payments_sort_order">{{ entry_sort_order }}</label>
            <div class="col-sm-10">
              <input type="number" name="payment_dna_payments_sort_order"
                     value="{{ payment_dna_payments_sort_order }}"
                     id="payment_dna_payments_sort_order"
                     class="form-control"/>
            </div>
          </div>

          <!-- Enable/Disable -->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="payment_dna_payments_status" id="input-status" class="form-control">
                {% if payment_dna_payments_status %}
                  <option value="1" selected="selected">{{ text_enabled }}</option>
                  <option value="0">{{ text_disabled }}</option>
                {% else %}
                  <option value="1">{{ text_enabled }}</option>
                  <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>

          <!-- Type -->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="payment_dna_payments_type">
              {{ entry_type }}
              {% if help_type %}
                <span data-toggle="tooltip" title="{{ help_type }}"></span>
              {% endif %}
            </label>
            <div class="col-sm-10">
              <select name="payment_dna_payments_type" id="payment_dna_payments_type" class="form-control">
                {% for type in payment_types %}
                  <option value="{{ type.id }}"{{ type.id == payment_dna_payments_type ? ' selected="selected"' : '' }}>{{ type.title }}</option>
                {% endfor %}
              </select>
            </div>
          </div>

          <!-- Payment order status -->
          <div class="form-group">
            <label class="col-sm-2 control-label" for="payment_dna_payments_order_status_paid_id">
              <span data-toggle="tooltip" title="{{ help_order_status_paid }}">
                  {{ entry_order_status_paid }}
              </span>
            </label>
            <div class="col-sm-10">
              <select name="payment_dna_payments_order_status_paid_id"
                      id="payment_dna_payments_order_status_paid_id"
                      class="form-control">
                {% for order_status in order_statuses %}
                  {% if order_status.order_status_id == payment_dna_payments_order_status_paid_id %}
                    <option value="{{ order_status.order_status_id }}"
                            selected="selected">{{ order_status.name }}</option>
                  {% else %}
                    <option value="{{ order_status.order_status_id }}">
                      {{ order_status.name }}
                    </option>
                  {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>

          <!-- Payment method name -->
          <div class="form-group required' }}">
            <label class="col-sm-2 control-label" for="payment_dna_payments_payment_method_name">
              {{ entry_payment_method_name }}
            </label>
            <div class="col-sm-10">
              <input type="text" name="payment_dna_payments_payment_method_name"
                     value="{{ payment_dna_payments_payment_method_name }}"
                     placeholder="{{ entry_payment_method_name }}"
                     id="payment_dna_payments_payment_method_name"
                     class="form-control"/>
              {% if error_payment_method_name %}
                <div class="text-danger">{{ error_payment_method_name }}</div>
              {% endif %}
            </div>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>

<script>
    var ids = ['payment_dna_payments_client_id', 'payment_dna_payments_client_secret', 'payment_dna_payments_terminal'];
    var testIds = ['payment_dna_payments_test_client_id', 'payment_dna_payments_test_client_secret', 'payment_dna_payments_test_terminal']
    $('#payment_dna_payments_test_mode').change(function(e) {
        if (e.target.value === '1') {
            for (var i = 0; i < ids.length; i++) {
                $('#' + ids[i]).closest('.form-group').removeClass('required');
            }
            for (var i = 0; i < testIds.length; i++) {
                $('#' + testIds[i]).closest('.form-group').addClass('required');
            }
        } else {
            for (var i = 0; i < ids.length; i++) {
                $('#' + ids[i]).closest('.form-group').addClass('required');
            }
            for (var i = 0; i < testIds.length; i++) {
                $('#' + testIds[i]).closest('.form-group').removeClass('required');
            }
        }
    });
</script>

{{ footer }}